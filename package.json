{
  "name": "shard",
  "version": "0.1.0",
  "engines": {
    "node": ">=6.9.3"
  },
  "engine-strict": true,
  "description": "零碎代码合集",
  "main": "server/app.js",
  "scripts": {
    "dev": "nodemon -e js,yaml server/app.js",
    "cron": "nodemon -e js,yaml server/cron.js",
    "lint": "eslint --ignore-path .lintignore server",
    "test": "NODE_ENV=test mocha --require co-mocha --colors server/resource/mocha_bootload 'server/**/*.test.js'",
    "cover": "NODE_ENV=test nyc --reporter html --reporter text-summary mocha --require co-mocha --colors server/resource/mocha_bootload 'server/**/*.test.js'",
    "start": "pm2 start pm2.json",
    "commit": "git cz",
    "postmerge": "git submodule update && npm install"
  },
  "author": "qiujun",
  "devDependencies": {
    "chai": "^3.5.0",
    "co-mocha": "^1.1.3",
    "eslint": "^3.1.1",
    "husky": "^0.12.0",
    "mocha": "^3.0.0",
    "nyc": "^7.1.0",
    "supertest": "^2.0.0"
  },
  "dependencies": {
    "bluebird": "^3.4.6",
    "body-parser": "^1.15.0",
    "chance": "^1.0.4",
    "co": "^4.6.0",
    "config": "^1.21.0",
    "connect-redis": "^3.1.0",
    "cron": "^1.1.0",
    "debug": "^2.2.0",
    "express": "^4.13.4",
    "express-ko": "^1.0.2",
    "express-session": "^1.14.0",
    "filesize": "^3.5.5",
    "glob": "^7.0.5",
    "ioredis": "^2.3.0",
    "js-yaml": "^3.6.1",
    "lodash": "^4.15.0",
    "moder": "^1.3.2",
    "moment": "^2.17.1",
    "mysql": "^2.11.1",
    "node-constellation": "0.0.5",
    "node-upyun-sdk": "^1.0.4",
    "nodemon": "^1.10.2",
    "sequelize": "^3.24.1",
    "shimmer": "^1.1.0",
    "solarlunar": "^1.0.0",
    "swagger-schema-official": "^2.0.0-bab6bed",
    "sway": "^1.0.0",
    "wechat-enterprise": "^0.1.1",
    "wechat-enterprise-api": "git+https://github.com/qious/wechat-enterprise-api.git",
    "winston": "^2.2.0",
    "winston-daily-rotate-file": "^1.2.0",
    "z-schema": "^3.17.0"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
