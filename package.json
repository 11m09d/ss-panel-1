{
  "name": "shard",
  "version": "0.0.1",
  "engines": {
    "node": ">=4.4.0"
  },
  "engineStrict": true,
  "description": "admin console",
  "main": "server/app.js",
  "scripts": {
    "dev": "nodemon -e js,yaml -x 'node --harmony' server/app.js",
    "lint": "./node_modules/.bin/eslint --ext .jsx,.js --ignore-path .gitignore client server",
    "test": "NODE_ENV=test ./node_modules/.bin/mocha --harmony --require co-mocha --colors server/lib/mocha-bootload server/test",
    "cover": "NODE_ENV=test ./node_modules/.bin/nyc --reporter html --reporter text ./node_modules/.bin/mocha --harmony --require co-mocha --colors server/lib/mocha-bootload server/test",
    "start": "pm2 start pm2.json",
    "commit": "git cz"
  },
  "author": "qiujun",
  "license": "",
  "devDependencies": {
    "co-mocha": "^1.1.3",
    "eslint": "^3.1.1",
    "ghooks": "^1.3.2",
    "mocha": "^3.0.0",
    "nyc": "^7.1.0",
    "should": "^10.0.0",
    "supertest": "^2.0.0"
  },
  "dependencies": {
    "body-parser": "^1.15.0",
    "co-request": "^1.0.0",
    "config": "^1.21.0",
    "connect-redis": "^3.1.0",
    "express": "^4.13.4",
    "express-ko": "^1.0.1",
    "express-session": "^1.14.0",
    "glob": "^7.0.5",
    "ioredis": "^2.3.0",
    "lodash": "^4.6.1",
    "winston": "^2.2.0",
    "winston-daily-rotate-file": "^1.2.0"
  },
  "config": {
    "ghooks": {
      "post-merge": "npm install"
    },
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
